{
	"variables": {
		"cpu": "4",
		"disk_size": "10240",
		"iso_url": "http://releases.ubuntu.com/xenial/ubuntu-16.04.6-server-amd64.iso",
		"iso_checksum_url": "http://releases.ubuntu.com/xenial/SHA256SUMS",
		"iso_checksum_type": "sha256",
		"ram_size": "2048",
		"ssh_username": "otto",
		"ssh_password": "SuperSecureTemp!",
        "vm_name": "packer-ubuntu-16.04-amd64"
	},
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "sudo -S sh '{{.Path}}'",
            "scripts": [
                "scripts/base.sh",
                "scripts/user.sh",
                "scripts/minimize.sh"
            ]
        }
    ],
    "builders": [
        {
            "type": "vmware-iso",
            "boot_command": [
		   		"<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
				"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
				"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
				"<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
				"/install/vmlinuz<wait>",
				" auto<wait>",
				" console-setup/ask_detect=false<wait>",
				" console-setup/layoutcode=us<wait>",
				" console-setup/modelcode=pc105<wait>",
				" debconf/frontend=text<wait>",
				" debian-installer=en_US<wait>",
				" fb=false<wait>",
				" initrd=/install/initrd.gz<wait>",
				" kbd-chooser/method=us<wait>",
				" keyboard-configuration/layout=USA<wait>",
				" keyboard-configuration/variant=USA<wait>",
				" locale=en_US<wait>",
				" netcfg/get_domain=vm<wait>",
				" netcfg/get_hostname=ubuntu-server-base<wait>",
				" grub-installer/bootdev=/dev/sda<wait>",
				" noapic<wait>",
				" preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
				" -- <wait>",
				"<enter><wait>" 
			],
			"cpus": "{{user `cpu`}}",
			"boot_wait": "10s",
			"disk_size": "{{user `disk_size`}}",
			"guest_os_type": "ubuntu-64",
			"headless": true,
			"http_directory": "http",
			"iso_url": "{{user `iso_url`}}",
			"iso_checksum_type": "{{user `iso_checksum_type`}}",
			"iso_checksum_url": "{{user `iso_checksum_url`}}",
			"output_directory": "bin",
			"memory": "{{user `ram_size`}}",
			"shutdown_command": "sudo shutdown -P now",
			"ssh_username": "{{user `ssh_username`}}",
			"ssh_password": "{{user `ssh_password`}}",
			"ssh_port": 22,
			"ssh_wait_timeout": "10000s",
			"tools_upload_flavor": "linux",
			"vm_name": "{{user `vm_name`}}",
			"vmx_data": {
				"cupid.coresPerSocket": "1",
				"memsize": "512",
				"numvcpus": "1"
			}
        },
        {
        	"type": "hyperv-iso",
